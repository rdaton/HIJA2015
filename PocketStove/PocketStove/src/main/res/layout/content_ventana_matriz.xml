<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hja.practica.ultima.pocketstove.VentanaMatriz"
    tools:showIn="@layout/activity_ventana_matriz"
    android:weightSum="1">


    <TextView
        android:id="@+id/labelPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porcentaje"
        android:layout_x="0dp"
        android:layout_y="60dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="initDiagonal"
        android:id="@+id/matr"
        android:layout_alignTop="@+id/comboTipoCarta"
        android:layout_centerHorizontal="true"
        android:layout_x="210dp"
        android:layout_y="140dp"
        android:layout_gravity="bottom" />

    <Spinner
        android:id="@+id/comboTipoCarta"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:prompt="@string/prompt_tipoCarta"
        android:spinnerMode="dropdown"
        android:entries="@array/array_selector"

        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/matr"
        android:layout_marginBottom="128dp"
        android:layout_x="24dp"
        android:layout_y="140dp"
        android:layout_gravity="bottom" />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tablaDiagonal"
        android:columnCount="13"
        android:rowCount="13"
        android:layout_above="@+id/comboTipoCarta"
        android:layout_marginBottom="45dp"
        android:layout_alignTop="@+id/comboTipoCarta"
        android:layout_weight="2.87"
        android:layout_x="0dp"
        android:layout_y="230dp" />

    <SeekBar
        android:id="@+id/unSlider"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="52dp"
        />


</AbsoluteLayout>
